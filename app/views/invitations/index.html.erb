<section class="users-section">
  <ul class="users-list">
    <% @friend_requests.each do |user| %>
        <li> 
            <%= user.name %> 
            <%= form_with(:url => invitations_path ) do |f| %>
                <%= f.hidden_field :user_id, value: user.id %>
                <%= f.submit "Accept Request" %>
            <% end %>
            <%= form_with(:url => invitation_path(user), :method => :delete ) do |f| %>
                <%= f.hidden_field :user_id, value: user.id %>
                <%= f.submit "Decline Request" %>
            <% end %>
        </li>
    <% end %>
    <%= render :partial => "accept_user", :collection => @friend_requests %>
  </ul>
</section>
